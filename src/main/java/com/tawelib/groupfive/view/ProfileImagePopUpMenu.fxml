<!--
There is a grid here that is invisible until there are some images in there.
It holds 6 images by
default.
-->
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>


<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <Pane prefHeight="200.0" prefWidth="200.0"
              BorderPane.alignment="CENTER">
            <children>
                <Text layoutX="157.0" layoutY="47.0" strokeType="OUTSIDE"
                      strokeWidth="0.0"
                      text="Profile image selector">
                    <font>
                        <Font size="30.0"/>
                    </font>
                </Text>
                <Text layoutX="138.0" layoutY="90.0" strokeType="OUTSIDE"
                      strokeWidth="0.0"
                      text="Choose profile image or create your own"/>
                <Button layoutX="173.0" layoutY="341.0" mnemonicParsing="false"
                        text="Draw your own profile image"/>
                <GridPane layoutX="3.0" layoutY="117.0" prefHeight="167.0"
                          prefWidth="593.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                                           prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                                           prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                                           prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                        vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                        vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <ImageView fitHeight="80.0" fitWidth="199.0"
                                   pickOnBounds="true" preserveRatio="true"
                                   GridPane.columnIndex="1"/>
                        <ImageView fitHeight="80.0" fitWidth="199.0"
                                   pickOnBounds="true" preserveRatio="true"/>
                        <ImageView fitHeight="80.0" fitWidth="199.0"
                                   layoutX="10.0" layoutY="12.0"
                                   pickOnBounds="true" preserveRatio="true"
                                   GridPane.columnIndex="2"/>
                        <ImageView fitHeight="80.0" fitWidth="199.0"
                                   layoutX="406.0" layoutY="12.0"
                                   pickOnBounds="true" preserveRatio="true"
                                   GridPane.rowIndex="1"/>
                        <ImageView fitHeight="80.0" fitWidth="199.0"
                                   layoutX="406.0" layoutY="12.0"
                                   pickOnBounds="true" preserveRatio="true"
                                   GridPane.columnIndex="1"
                                   GridPane.rowIndex="1"/>
                        <ImageView fitHeight="80.0" fitWidth="199.0"
                                   layoutX="406.0" layoutY="12.0"
                                   pickOnBounds="true" preserveRatio="true"
                                   GridPane.columnIndex="2"
                                   GridPane.rowIndex="1"/>
                    </children>
                </GridPane>
            </children>
        </Pane>
    </center>
</BorderPane>
