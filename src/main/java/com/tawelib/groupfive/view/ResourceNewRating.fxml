<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tawelib.groupfive.fxmlcontroller.NewRatingController">
   <children>
      <VBox spacing="10.0">
         <children>
            <HBox spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#back" text="Back" />
                  <Label id="titleLabel" fx:id="titleLabel" text="New Rating / Review" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Slider id="ratingSlider" fx:id="ratingSlider" blockIncrement="1.0" majorTickUnit="1.0" max="5.0" min="1.0" minorTickCount="0" showTickMarks="true" snapToTicks="true" value="1.0" />
                  <Label id="ratingValueLabel" fx:id="ratingValueLabel" text="1" />
               </children>
            </HBox>
            <Label text="Review:" />
            <TextArea id="reviewArea" fx:id="reviewArea" prefHeight="200.0" prefWidth="200.0" promptText="Start typing here..." wrapText="true" />
            <Button mnemonicParsing="false" onAction="#confirm" text="Submit" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
