<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="660.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tawelib.groupfive.fxmlcontroller.NewRatingController">
   <children>
      <VBox prefHeight="660.0" prefWidth="700.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <BorderPane>
               <right>
                  <HBox nodeOrientation="RIGHT_TO_LEFT" BorderPane.alignment="CENTER">
                     <children>
                        <StackPane>
                           <children>
                              <Circle fill="#c9e4ff" radius="12.5" stroke="#8cc8ff" strokeType="INSIDE" />
                              <Label id="helpIcon" fx:id="helpIcon" alignment="CENTER" prefHeight="25.0" prefWidth="25.0" text="?" textFill="WHITE" StackPane.alignment="CENTER">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                                 <tooltip>
                                    <Tooltip id="helpTooltip" fx:id="helpTooltip" text="Empty Tooltip" />
                                 </tooltip>
                              </Label>
                           </children>
                        </StackPane>
                     </children>
                  </HBox>
               </right>
               <left>
                  <HBox spacing="10.0" BorderPane.alignment="CENTER">
                     <children>
                        <Button mnemonicParsing="false" onAction="#back" text="Back" />
                     </children>
                  </HBox>
               </left>
               <center>
                  <Label id="titleLabel" fx:id="titleLabel" prefHeight="25.0" text="New Rating / Review" BorderPane.alignment="CENTER">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
               </center>
            </BorderPane>
            <Label id="ratingLabel" fx:id="ratingLabel" text="Rating*:" />
            <ComboBox id="ratingBox" fx:id="ratingBox" promptText="-- Please Select --" />
            <Label text="Review:" />
            <TextArea id="reviewArea" fx:id="reviewArea" prefHeight="200.0" prefWidth="200.0" promptText="Start typing here..." wrapText="true" />
            <Button mnemonicParsing="false" onAction="#confirm" text="Submit" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
