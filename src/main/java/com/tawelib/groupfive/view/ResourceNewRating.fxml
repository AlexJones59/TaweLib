<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tawelib.groupfive.fxmlcontroller.NewRatingController">
   <children>
      <VBox spacing="10.0">
         <children>
            <HBox spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#back" text="Back" />
                  <Button id="helpButton" fx:id="helpButton" mnemonicParsing="false" text="?">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
                  <Label id="titleLabel" fx:id="titleLabel" text="New Rating / Review">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font></Label>
               </children>
            </HBox>
            <Label id="ratingLabel" fx:id="ratingLabel" text="Rating*:" />
            <ComboBox id="ratingBox" fx:id="ratingBox" promptText="-- Please Select --" />
            <Label text="Review:" />
            <TextArea id="reviewArea" fx:id="reviewArea" prefHeight="200.0" prefWidth="200.0" promptText="Start typing here..." wrapText="true" />
            <Button mnemonicParsing="false" onAction="#confirm" text="Submit" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
